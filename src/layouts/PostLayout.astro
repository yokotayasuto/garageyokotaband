---
import Layout from './Layout.astro';
import { format } from 'date-fns';
import { ja } from 'date-fns/locale';

const { frontmatter } = Astro.props;
const formattedDate = format(new Date(frontmatter.date), 'yyyy年MM月dd日', { locale: ja });
---

<Layout title={frontmatter.title} description={frontmatter.description}>
  <article class="post">
    <header class="post-header">
      <h1>{frontmatter.title}</h1>
      <div class="post-meta">
        <time datetime={frontmatter.date}>{formattedDate}</time>
        {frontmatter.tags && (
          <div class="post-tags">
            {frontmatter.tags.map((tag: string) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
      </div>
    </header>
    
    <div class="post-content">
      <slot />
    </div>
    
    <footer class="post-footer">
      <a href="/posts" class="back-link">← 記事一覧に戻る</a>
    </footer>
  </article>
</Layout>

<style>
  .post {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .post-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #eee;
  }
  
  .post-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    font-size: 0.9rem;
    color: #666;
    margin-top: 0.5rem;
  }
  
  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .tag {
    background-color: #f0f0f0;
    padding: 0.2rem 0.5rem;
    border-radius: 3px;
    font-size: 0.8rem;
  }
  
  .post-content {
    line-height: 1.8;
  }
  
  .post-content h2 {
    margin-top: 2rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #eee;
  }
  
  .post-content img {
    max-width: 100%;
    height: auto;
    border-radius: 5px;
  }
  
  .post-content pre {
    background-color: #f5f5f5;
    padding: 1rem;
    border-radius: 5px;
    overflow-x: auto;
  }
  
  .post-content blockquote {
    border-left: 4px solid var(--color-primary);
    padding-left: 1rem;
    font-style: italic;
    color: #666;
  }
  
  .post-footer {
    margin-top: 3rem;
    padding-top: 1rem;
    border-top: 1px solid #eee;
  }
  
  .back-link {
    display: inline-block;
    margin-top: 1rem;
  }
</style> 